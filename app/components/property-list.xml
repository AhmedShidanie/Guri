<?xml version="1.0" encoding="UTF-8"?>
<GridLayout rows="auto, *" class="page">
    <ActivityIndicator busy="{{ isLoading }}" row="0" />
    <ListView items="{{ properties }}" itemTap="{{ onPropertyTap }}" row="1" class="list-group">
        <ListView.itemTemplate>
            <include src="~/components/property-list-item" />
        </ListView.itemTemplate>
    </ListView>
</GridLayout>